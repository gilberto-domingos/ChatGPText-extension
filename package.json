{
  "name": "expander-text-extension",
  "version": "1.0.0",
  "description": "Extens√£o Chrome para expandir atalhos de texto.",
  "main": "dist/background.js",
  "scripts": {
    "build": "tsc && cp src/popup.html dist/",
    "clean": "rm -rf dist",
    "watch": "tsc --watch",
    "copy:html": "chokidar 'src/popup.html' -c 'cp src/popup.html dist/popup.html'",
    "dev": "concurrently -k \"npm run watch\" \"npm run copy:html\""
  },
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "typescript": "^5.8.3"
  }
}
